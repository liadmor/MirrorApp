<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".CreateBoard">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/createtitleofboard"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:paddingTop="12dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="88dp"
        android:layout_height="494dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="4dp">

        <ImageButton
            android:id="@+id/addDraw"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_feachers_style"
            android:src="@drawable/ic_draw"
            app:layout_constraintBottom_toTopOf="@+id/addVoic"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/addVoic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_feachers_style"
            android:src="@drawable/ic_voice_record"
            app:layout_constraintBottom_toTopOf="@+id/addPic"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/addEmoji"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_feachers_style"
            android:src="@drawable/ic_stiker"
            app:layout_constraintBottom_toTopOf="@+id/addDraw"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/addText"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_feachers_style"
            android:src="@drawable/ic_text"
            app:layout_constraintBottom_toTopOf="@+id/addEmoji"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/addPic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_feachers_style"
            android:src="@drawable/ic_camera"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="474dp" />

        <Button
            android:id="@+id/saveboard"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_save_style"
            android:text="save"
            app:layout_constraintTop_toBottomOf="@+id/addPic"
            tools:layout_editor_absoluteX="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="230dp"
        android:layout_height="493dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763">

<!--        <com.xiaopo.flying.sticker.StickerView-->
<!--            android:id="@+id/stickerView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->



            <EditText
                android:id="@+id/createcontentofboard"
                android:layout_width="226dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_toLeftOf="@+id/saveboard"
                android:ems="10"
                android:hint="ספרי לנו עוד"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="15sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/draw_view"
                tools:layout_editor_absoluteX="101dp" />

            <com.example.mirrorapp.DrawView
                android:id="@+id/draw_view"
                android:layout_width="226dp"
                android:layout_height="327dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="315dp" />
<!--        </com.xiaopo.flying.sticker.StickerView>-->


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>