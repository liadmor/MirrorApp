<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBoard">

    <Toolbar
        android:id="@+id/toolbarofcreateboard"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <EditText
            android:id="@+id/createtitleofboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="איך את מרגישה?"
            android:paddingTop="12dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold">

        </EditText>
    </Toolbar>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:background="#faf7f7"
        android:gravity="top|right"
        android:textColor="@color/black"
        android:textDirection="rtl"
        android:hint="ספרי לנו עוד"
        android:layout_below="@+id/toolbarofcreateboard"
        android:padding="15dp"
        android:id="@+id/createcontentofboard">

    </EditText>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/saveboard"
        android:src="@drawable/ic_baseline_save_alt_24"
        android:background="@color/browser_actions_bg_grey"
        app:maxImageSize="56dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>