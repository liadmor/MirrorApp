<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exit"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="266dp"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="70dp"
        app:srcCompat="@drawable/addim" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="76dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Didn't find the emotion that spoke to you?"
        android:textColor="#ff000000"
        android:textFontWeight="400"
        android:textSize="19.00sp" />

    <EditText
        android:id="@+id/emotionadd"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:inputType="text"
        android:hint="Write the word thatâ€™s on your mind" />

    <TextView
        android:id="@+id/addButton"
        android:layout_width="391dp"
        android:layout_height="212dp"
        android:layout_below="@+id/emotionadd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/add_emotion_button_bg"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Add to the board"
        android:textColor="#faffffff"
        android:textSize="27.00sp" />

</RelativeLayout>